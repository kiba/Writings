#!/bin/bash

today=reports/$(date +%Y-%m-%d).md
yesterday=reports/$(date -v-1d +%Y-%m-%d).md

total=$(wc -w for_science/chp*.md | tail -1)
echo $total > $today

count=($total)

reports=$(ls reports/*.md)

graph=""
average=0
size=0

for i in ${reports[@]}
do
  ((++size))
  count=$(tail -1 ${i[0]})
  set -- $count
  graph+=" "
  graph+=$1
done

spark $graph
echo $size
