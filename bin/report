#!/bin/bash

today=reports/$(date +%Y-%m-%d).md
yesterday=reports/$(date -v-1d +%Y-%m-%d).md

total=$(wc -w for_science/chp*.md | tail -1)
echo $total > $today

count=($total)

reports=$(ls reports/*.md)

graph=""
size=0
words=0

for i in ${reports[@]}
do
  ((++size))

  count=$(tail -1 ${i[0]})
  set -- $count
  ((words += $1))
  graph+=" "
  graph+=$1

  if (( size >= 1))
  then
    echo "beep"
  fi
done

spark $graph
echo `expr $words / $size`
